@model CreateOrderPageVM

<form asp-controller="Shopping" asp-action="ConfirmOrder" method="post">  

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Gonderim Adresi
            </label>

            <div class="col-sm-10">
                <input type="text" asp-for="NoLoginCreate.ShippingAddress" class="form-control" />
                <span class="text-danger" asp-validation-for="NoLoginCreate.ShippingAddress"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">
                Email adresi
            </label>

            <div class="col-sm-10">
                <input type="text" asp-for="NoLoginCreate.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="NoLoginCreate.Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">
                İsim soyisim
            </label>
            <div class="col-sm-10">
                <input type="text" asp-for="NoLoginCreate.NameDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="NoLoginCreate.NameDescription"></span>
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">
                Gonderim Adresi
            </label>

            <div class="col-sm-10">
                <input type="text" asp-for="LoginCreate.ShippingAddress" class="form-control" />
                <span class="text-danger" asp-validation-for="LoginCreate.ShippingAddress"></span>
            </div>
        </div>
    }
    <div class="form-group">
        <label class="col-sm-2">
            Kart Numarası
        </label>

        <div class="col-sm-10">
            <input type="text" asp-for="PaymentRequestModel.CardNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="PaymentRequestModel.CardNumber"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">
            Güvenlik Numarası
        </label>

        <div class="col-sm-10">
            <input type="text" asp-for="PaymentRequestModel.CCV" class="form-control" />
            <span class="text-danger" asp-validation-for="PaymentRequestModel.CCV"></span>
        </div>
    </div>
   
    <div class="form-group">
        <label class="col-sm-2">
            Gecerlilik süresi(Yıl)
        </label>

        <div class="col-sm-10">
            <input type="text" asp-for="PaymentRequestModel.ExpiryYear" class="form-control" />
            <span class="text-danger" asp-validation-for="PaymentRequestModel.ExpiryYear"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2">
            Gecerlilik süresi(Ay)
        </label>

        <div class="col-sm-10">
            <input type="text" asp-for="PaymentRequestModel.ExpiryMonth" class="form-control" />
            <span class="text-danger" asp-validation-for="PaymentRequestModel.ExpiryMonth"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">
            Kart üzerindeki isim
        </label>

        <div class="col-sm-10">
            <input type="text" asp-for="PaymentRequestModel.CardUserName" class="form-control" />
            <span class="text-danger" asp-validation-for="PaymentRequestModel.CardUserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <br />
            <button type="submit" class="btn btn-primary">Onayla</button>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>
</form>