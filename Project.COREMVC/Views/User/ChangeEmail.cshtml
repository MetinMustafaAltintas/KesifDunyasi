@model ChangeEmailPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}

<section>
    <div class="panel panel-primary">
        <div class="panel-heading">  Mail Değiştirme</div>
        <div class="panel-body">
            <form asp-action="ChangeEmail" asp-controller="User" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-2 control-label">Mevcut Email</label>
                    <div class="col-lg-6">
                        <span class="text-danger" asp-validation-for="ChangeEmailPureVM.CurrentEmail"></span>
                        <input asp-for="ChangeEmailPureVM.CurrentEmail" type="text" class="form-control" id="c-pwd">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Yeni Email</label>
                    <div class="col-lg-6">
                        <span class="text-danger" asp-validation-for="ChangeEmailPureVM.NewEmail"></span>
                        <input asp-for="ChangeEmailPureVM.NewEmail" type="text" class="form-control" id="c-pwd">
                    </div>
                </div>        
                <br />
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-info">Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>