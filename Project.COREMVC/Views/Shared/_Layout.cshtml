<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="KesifDunyasi">
    <meta name="author" content="KesifDunyasi">
    <meta name="keyword" content="KesifDunyasi ,KeşifDünyasi">
    <link rel="shortcut icon" href="img/KesifDunyasi.png">

    <title>Keşif Dünyası</title>

    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/OuterTools/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a class="logo">Keşif<span>Dünyası</span></a>
            <!--logo end-->
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <a asp-controller="Shopping" asp-action="CartPage"><i class="icon-shopping-cart"></i> Sepet</a>
                    </li>
                    <!-- user login dropdown start-->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown ">
                            <a data-toggle="dropdown" class="dropdown-toggle">
                                <!--  <img alt="" src="img/avatar1_small.jpg"> -->
                                <span class="icon-user"></span>
                                <span class="username"> @User.Identity.Name</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended">
                                <div class="log-arrow-up"></div>
                                <li><a asp-action="Signout" asp-controller="Home" asp-area=""><i class="icon-key"></i> Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Signin" asp-controller="Home">Giriş Yap</a>
                        </li>
                    }
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a href="index.html">
                            <i class="icon-dashboard"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-user"></i>
                            <span>Kullanıcılar menüsü</span>
                        </a>
                        <ul class="sub">
                            <li><a asp-action="index" asp-controller="User">Kullanıcılar Listesi</a></li>
                            <li><a asp-action="Create"  asp-controller="User">Kullanıcı Ekle</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Roller Menüsü</span>
                        </a>
                        <ul class="sub">
                            <li><a asp-action="index"  asp-controller="Role">Roller Listesi</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Kategoriler Menüsü</span>
                        </a>
                        <ul class="sub">
                            <li><a asp-action="index"  asp-controller="Category">Kategoriler Listesi</a></li>
                            <li><a asp-action="Create"  asp-controller="Category">Kategori Ekle</a></li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-cogs"></i>
                            <span>Ürünler Menüsü</span>
                        </a>
                        <ul class="sub">
                            <li><a asp-action="index"  asp-controller="Product">Ürünler Listesi</a></li>
                            <li><a asp-action="CreateProduct"  asp-controller="Product">Ürün Ekle</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                Keşif Dünyası
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/OuterTools/js/jquery.js"></script>
    <script src="~/OuterTools/js/jquery-1.8.3.min.js"></script>
    <script src="~/OuterTools/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/OuterTools/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/OuterTools/js/jquery.scrollTo.min.js"></script>
    <script src="~/OuterTools/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/OuterTools/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/OuterTools/js/owl.carousel.js"></script>
    <script src="~/OuterTools/js/jquery.customSelect.min.js"></script>
    <script src="~/OuterTools/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="~/OuterTools/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="~/OuterTools/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/OuterTools/js/sparkline-chart.js"></script>
    <script src="~/OuterTools/js/easy-pie-chart.js"></script>
    <script src="~/OuterTools/js/count.js"></script>

    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

    

    <style>
        .login-cart-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .login-button,
        .cart-button {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            background-color: #eee;
            cursor: pointer;
        }

        .icon-user,
        .icon-cart {
            font-size: 18px;
            margin-right: 10px;
        }

        .text {
            font-weight: bold;
        }

        .cart-count {
            background-color: red;
            color: white;
            font-size: 12px;
            padding: 2px 5px;
            border-radius: 50%;
            margin-left: 5px;
        }
    </style>

</body>
</html>
