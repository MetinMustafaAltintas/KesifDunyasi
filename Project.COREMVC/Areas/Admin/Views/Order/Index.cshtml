@model GetOrderPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Siparişler Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Sipariş Adresi</th>
                                <th>Email Adresi</th>
                                <th>Sipariş Açıklaması</th>
                                <th>Sipariş Tutarı</th>
                                <th>Kullanıcının ID</th>
                                <th>Göndirici Firma ID</th>
                                <th class="hidden-phone">Durumu</th>
                                <th class="hidden-phone">Guncelle</th>
                                <th class="hidden-phone">Pasife Al</th>
                                <th class="hidden-phone">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetOrderPureVM item in Model.GetOrderPureVMs)
                            {
                                <tr class="gradeX">
                                    <td>@item.ID</td>
                                    <td>@item.ShippingAddress</td>
                                    <td>@item.Email</td>
                                    <td>@item.NameDescription</td>
                                    <td>@item.PriceOfOrder</td>
                                    <td>@item.AppUserID</td>
                                    <td>@item.ShipperID</td>
                                    <td class="center hidden-phone">@item.Status</td>
                                    <td class="center hidden-phone"><a asp-action="UpdateShipper" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                                    <td class="center hidden-phone"><a asp-action="PassiveShipper" asp-route-id="@item.ID" class="btn btn-info">Pasife Al</a></td>
                                    <td class="center hidden-phone"><a asp-action="DeleteShipper" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>