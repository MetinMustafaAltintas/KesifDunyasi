@model GetProductPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}
<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürünler Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                    <tr>
                        <th>Urun ID</th>
                        <th>Urun Ismi</th>
                        <th>Fiyat</th>
                        <th>Kategorisi</th>
                        <th>Resim</th>
                        <th class="hidden-phone">Stok</th>
                        <th class="hidden-phone">Durumu</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (GetProductPureVM item in Model.GetProductPureVM)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td><a asp-action="ProductProperty" asp-route-id="@item.ID">@item.ProductName</a></td>
                            <td>@item.Unitprice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                            <td>@item.CategoryName</td>
                                    <td>
                                        @if (item.ImagePath.Contains("nightlife"))
                                        {
                                            <img width="30" height="30" src="/images/BasicFoto.png" />
                                        }
                                        else
                                        {
                                            <img width="30" height="30" src="@item.ImagePath" />
                                        }
                                </td>
                            <td class="hidden-phone">@item.UnitsInStock</td>
                            <td class="center hidden-phone">@item.Status</td>
                            <td class="center hidden-phone"><a asp-action="UpdateProduct" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteProduct" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyProduct" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td> </tr>
                    }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Urun ID</th>
                                <th>Urun Ismi</th>
                                <th>Fiyat</th>
                                <th>Kategorisi</th>
                                <th>Resim</th>
                                <th class="hidden-phone">Stok</th>
                                <th class="hidden-phone">Durumu</th>
                                <th class="hidden-phone">Guncelle</th>
                                <th class="hidden-phone">Sil</th>
                                <th class="hidden-phone">Yok Et</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

