@model CreateAttribuePageVM


<form asp-action="CreateProductProperty" asp-controller="Product" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="AttributeValueVM.ID" />
    <div class="mb-3">
        <label>Ürün Özelliği Giriniz</label>
        <input asp-for="AttributeValueVM.AttributeName" asp-area="admin" class="form-control" />
        <span asp-validation-for="AttributeValueVM.AttributeName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Özellik Değerini Giriniz</label>
        <input asp-for="AttributeValueVM.Value" class="form-control" />
        <span asp-validation-for="AttributeValueVM.Value" class="text-danger"></span>
    </div>
    <br />
    <div class="mb-3">
        <button class="btn btn-primary">Kaydet</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>
